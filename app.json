{
    "apps": [
        {
            "name": "node-server",
            "script": "./app/server/index.js",
            "watch": false,
            "node_args": "--harmony",
            "merge_logs": false,
            "error_file": "./logs/error.log",
            "out_file": "./logs/out.log",
            "pid_file": "./logs/pid.log",
            "log_date_format": "YYYY-MM-DD HH:mm Z",
            "cwd": "./",
            "env": {
                "NODE_ENV": "development",
                "NODE_PATH": "./app",
                "PORT": 3000
            },
            "env_production": {
                "NODE_ENV": "production",
                "NODE_PATH": "./app",
                "PORT": 3000
            }
        }
    ]   
}